{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "class-methods-use-this": 0,
    "react/jsx-props-no-spreading": 0,
    "react/state-in-constructor": 0,
    "arrow-parens": [
      "error",
      "as-needed"
    ]
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "jest": false,
    "describe": false,
    "test": false,
    "expect": false
  }
}
